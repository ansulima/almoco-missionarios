<!DOCTYPE html>
<html>
<head>
  <title>Almoço para Missionários</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body class="bg-light">

<div class="container mt-5">
  <h1 class="text-center mb-4">Agendamento de Almoço para Missionários</h1>

  <!-- Calendário -->
  <div class="card">
    <div class="card-body">
      <%= render 'calendar' %>
    </div>
  </div>
</div>

<!-- Modal de Agendamento -->
<div class="modal fade" id="scheduleModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agendar Almoço</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p><strong>Data:</strong> <span id="modalDate"></span></p>
        <div class="mb-3">
          <label class="form-label">Nome</label>
          <input type="text" class="form-control" id="nameInput">
        </div>
        <div class="mb-3">
          <label class="form-label">Telefone</label>
          <input type="text" class="form-control" id="phoneInput" placeholder="(XX) XXXXX-XXXX">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success" id="confirmBtn">Confirmar</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de Confirmação -->
<div class="modal fade" id="confirmModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agendamento Confirmado!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="confirmBody">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Voltar</button>
      </div>
    </div>
  </div>
</div>

</body>
</html>